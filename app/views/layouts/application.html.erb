<!DOCTYPE html>
<html>
  <head>
    <title>MASAMUNE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>
    <nav class='navbar navbar-expand-md navbar-dark fixed-top bg-dark'>
      <div class='container'>
        <a class='navbar-brand' href='/'>MASAMUNE</a>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= active_link_to 'ホーム', '/', class: 'nav-link', active: :exclusive, wrap_tag: :li, wrap_class: 'nav-item' %>
            </li>
            <li class="nav-item">
              <%= active_link_to '分析', '/analytics/followers', class: 'nav-link', wrap_tag: :li, wrap_class: 'nav-item' %>
            </li>
          </ul>
          <p class="text-white mb-0">
            <%= image_tag @user&.profile_image_url_https.to_s, class: 'border border-white rounded', width: 35 %>
            <%= @user&.name %>
            <small class="text-white-50">@<%= @user&.screen_name %></small>
          </p>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
