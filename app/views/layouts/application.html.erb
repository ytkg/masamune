<!DOCTYPE html>
<html>
  <head>
    <title>MASAMUNE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <a href="/" class="nav-link">ホーム</a>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <%= link_to 'ポイント', points_path, class: 'nav-link', data: { turbolinks: false } %>
          </li>
          <li class="nav-item d-none d-sm-inline-block">
            <%= link_to 'デイリーミッション', daily_mission_index_path, class: 'nav-link' %>
          </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
          <!-- Notifications Dropdown Menu -->
          <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <i class="fab fa-product-hunt"></i>
              <span class="badge badge-warning navbar-badge"><%= current_user.points.sum(:value) %>P</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <span class="dropdown-header"><%= current_user.points.sum(:value) %>ポイント</span>
              <% current_user.points.order(created_at: :desc).take(3).each do |point| %>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item">
                  <i class="far fa-laugh-beam"></i> <%= point.value %>ポイント
                  <span class="float-right text-muted text-sm"><%= time_ago_in_words point.created_at %></span>
                </div>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to 'ポイント履歴', points_path, class: 'dropdown-item dropdown-footer', data: { turbolinks: false } %>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
              <i class="fas fa-th-large"></i>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/" class="brand-link">
          <%= image_tag 'AdminLTELogo.png', class: 'brand-image img-circle elevation-3', style: 'opacity: .8' %>
          <span class="brand-text font-weight-light">MASAMUNE</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
          <!-- Sidebar user panel (optional) -->
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <%= image_tag current_user.image_url, class: 'img-circle elevation-2', width: 35 %>
            </div>
            <div class="info">
              <a href="#" class="d-block">@<%= current_user.screen_name %></a>
            </div>
          </div>
          <!-- Sidebar Menu -->

          <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
              <!-- Add icons to the links using the .nav-icon class
                   with font-awesome or any other icon font library -->
              <li class="nav-item">
                <%= active_link_to '/', class: 'nav-link', wrap_class: 'nav-link', active: :exclusive do %>
                  <i class="fas fa-chart-line nav-icon"></i>
                  <p>ダッシュボード</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= active_link_to '/tweets', class: 'nav-link', wrap_class: 'nav-link', data: { turbolinks: false } do %>
                  <i class="far fa-comment-alt nav-icon"></i>
                  <p>ツイート</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= active_link_to '/friendships', class: 'nav-link', wrap_class: 'nav-link', data: { turbolinks: false } do %>
                  <i class="fas fa-user-friends nav-icon"></i>
                  <p>ユーザー</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= active_link_to '/reports', class: 'nav-link', wrap_class: 'nav-link' do %>
                  <i class="far fa-file nav-icon"></i>
                  <p>レポート</p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= active_link_to '/analytics/followers', class: 'nav-link', wrap_class: 'nav-link' do %>
                  <i class="far fa-chart-bar nav-icon"></i>
                  <p>分析</p>
                <% end %>
              </li>
              <li class="nav-header"></li>
              <li class="nav-item">
                <%= link_to logout_path, class: 'nav-link' do %>
                  <i class="fas fa-sign-out-alt nav-icon"></i>
                  <p>ログアウト</p>
                <% end %>
              </li>
            </ul>
          </nav>
          <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0 text-dark"><%= yield :page_title %></h1>
              </div><!-- /.col -->
              <% if yield(:page_title) != 'ダッシュボード' %>
                <div class="col-sm-6">
                  <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">ホーム</a></li>
                    <li class="breadcrumb-item active"><%= yield :page_title %></li>
                  </ol>
                </div><!-- /.col -->
              <% end %>
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="content">
          <div class="container-fluid">
            <div class="row">
              <%= yield %>
            </div>
            <!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->

      <!-- Control Sidebar -->
      <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
        <div class="p-3">
          <h5>Title</h5>
          <p>Sidebar content</p>
        </div>
      </aside>
      <!-- /.control-sidebar -->

      <!-- Main Footer -->
      <footer class="main-footer">
        <!-- To the right -->
        <div class="float-right d-none d-sm-inline">
          <%= link_to 'https://github.com/ytkg/masamune', target: '_blank' do %>
            <i class="fab fa-github"></i>
          <% end %>
        </div>
        <!-- Default to the left -->
        <strong>Copyright &copy; <%= Time.zone.now.year %> <a href="/">MASAMUNE</a>.</strong> All rights reserved.
      </footer>
    </div>
    <!-- ./wrapper -->
  </body>
</html>
