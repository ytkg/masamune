<% if @success %>
  document.getElementById('twitter_user_id_<%= @twitter_user_id %>').remove();
  document.querySelector('#friends_count').innerHTML = <%= current_user.friends_count %>;
  document.querySelector('#friends_and_followers_count').innerHTML = <%= current_user.friends_and_followers_count %>;
  document.querySelector('#follower_except_friend_users_count').innerHTML = <%= current_user.followers_except_friends_count %>;
  elm = document.querySelector('#user_point');
  elm.innerHTML = parseInt(elm.innerHTML) + <%= @point[:value] %>;
<% else %>
  alert('フォローに失敗しました。ポイントが不足している可能性があります。');
<% end %>
