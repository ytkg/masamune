<% content_for :page_title, 'ユーザー' %>
<div class="col-lg-12">
  <div class="card">
    <div class="card-body">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="friends-tab" data-toggle="tab" href="#friends" role="tab" aria-controls="friends" aria-selected="true">
            フォロー <span class="badge badge-secondary"><%= @friend_users.length %></span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="followers-tab" data-toggle="tab" href="#followers" role="tab" aria-controls="followers" aria-selected="false">
            フォロワー <span class="badge badge-secondary"><%= @follower_users.length %></span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="friend_and_follower_users-tab" data-toggle="tab" href="#friend_and_follower_users" role="tab" aria-controls="friend_and_follower_users" aria-selected="false">
            相互フォロー <span class="badge badge-secondary"><%= @friend_and_follower_users.length %></span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="friend_except_follower_users-tab" data-toggle="tab" href="#friend_except_follower_users" role="tab" aria-controls="friend_except_follower_users" aria-selected="false">
            フォローされていない <span class="badge badge-secondary"><%= @friend_except_follower_users.length %></span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="follower_except_friend_users-tab" data-toggle="tab" href="#follower_except_friend_users" role="tab" aria-controls="follower_except_friend_users" aria-selected="false">
            ファン <span class="badge badge-secondary"><%= @follower_except_friend_users.length %></span>
          </a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="friends" role="tabpanel" aria-labelledby="friends-tab">
          <%= render partial: 'friend_user_table', locals: { users: @friend_users } %>
        </div>
        <div class="tab-pane fade" id="followers" role="tabpanel" aria-labelledby="followers-tab">
          <%= render partial: 'follower_user_table', locals: { users: @follower_users } %>
        </div>
        <div class="tab-pane fade" id="friend_and_follower_users" role="tabpanel" aria-labelledby="friend_and_follower_users-tab">
          <%= render partial: 'friend_user_table', locals: { users: @friend_and_follower_users } %>
        </div>
        <div class="tab-pane fade" id="friend_except_follower_users" role="tabpanel" aria-labelledby="friend_except_follower_users-tab">
          <%= render partial: 'friend_user_table', locals: { users: @friend_except_follower_users } %>
        </div>
        <div class="tab-pane fade" id="follower_except_friend_users" role="tabpanel" aria-labelledby="follower_except_friend_users-tab">
          <%= render partial: 'fun_user_table', locals: { users: @follower_except_friend_users } %>
        </div>
      </div>
    </div>
  </div>
</div>
