<% content_for :page_title, 'ツイート' %>
<div class="col-lg-12">
  <div class="card">
    <div class="card-body">
      <table data-toggle="table" data-classes="table table-sm">
        <thead>
          <tr>
            <th scope="col" data-sortable="true">ツイート日</th>
            <th scope="col">ツイート内容</th>
            <th scope="col" data-sortable="true">RT数</th>
            <th scope="col" data-sortable="true">いいね数</th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td class="text-nowrap"><%= tweet.tweeted_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
              <td><%= tweet.text %></td>
              <td class="text-right"><%= tweet.retweet_count %></td>
              <td class="text-right"><%= tweet.favorite_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
